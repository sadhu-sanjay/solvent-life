---
import Image from "astro/components/Image.astro";
import Card from "~/components/Card.astro";
import MenuIcon from "~/components/icons/menu-icons.astro";
import Sidebar from "~/components/template/Sidebar.astro";
const isUserLoggedIn = false;
---

<div class="w-screen h-screen flex">
    <aside id="aside" class="absolute sm:relative w-full sm:w-1/6 h-full">
        <Sidebar />
    </aside>
    <main class="w-full h-full sm:w-5/6">
        <div
            class="w-full h-full flex flex-col items-streach justify-between p-8 bg-gray-800"
        >
            <MenuIcon className="absolute left-4 top-4 sm:hidden" />
            <div class="flex justify-between">
                <button class="btn-secondary font-semibold">Sign up</button>
                <Image alt="Logo" src="/logo.webp" width={45} height={45} />
            </div>
            <div class="flex gap-4 flex-col items-center">
                <Image alt="Logo" src="/logo.webp" width={45} height={45} />
                <p class="font-semibold">How can i help you today?</p>
                <button class="btn-secondary px-16 font-bold">Log In </button>
            </div>
            <div
                class="flex flex-col h-auto mx-auto w-full sm:w-1/2 justify-center gap-4"
            >
                <ul role="list" class="link-card-grid">
                    <Card
                        href="https://docs.astro.build/"
                        title="Give me a summary"
                        body="of TSLA's 2023 earning report."
                    />
                    <Card
                        href="https://docs.astro.build/"
                        title="Show me the top gainers"
                        body="in the tech sector this month."
                    />
                    <Card
                        href="https://docs.astro.build/"
                        title="Give me a list of top-performing"
                        body="A.I related stocks in a table"
                    />
                    <Card
                        href="https://docs.astro.build/"
                        title="What is the premium  for SPY call"
                        body="expiring next Friday, strike price between 450 to 500?"
                    />
                </ul>
                <textarea class="rounded-xl text-gray-700 p-4 text-sm font-bold"
                    value="lorem Ipsam of the name of the game of the paper plane in the deparmtne of the game"
                    placeholder="Type your message..."
                ></textarea>
            </div>
        </div>
    </main>
    <script>
        const menuButton = document.getElementById("menu-button");
        const aside = document.getElementById("aside");
        console.log("Menu Button ", menuButton);
        menuButton?.addEventListener("click", () => {
            console.log("Menu Icon clicked");

            if (aside) {
                aside.style.display =
                    aside.style.display == "none" ? "block" : "none";
            }
        });
    </script>
</div>

<style>
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }
</style>
