---
import Image from "astro/components/Image.astro";
import MenuIcon from "~/components/icons/menu-icons.astro";
import Sidebar from "~/components/template/Sidebar.astro";
const isUserLoggedIn = false;
---

<div class="w-screen h-screen flex">
    <aside id="aside" class="absolute sm:relative w-full sm:w-1/6 h-full bg-red-900">
        <Sidebar />
    </aside>
    <main class="bg-gray-500 w-full sm:w-5/6 ">
        <MenuIcon className="absoluteleft-4 top-4 sm:hidden" />
        <slot />
        <!-- <div class="bg-red-900 flex justify-between p-4">
           <h1>Goswami</h1> 
           <h1>Sanjay</h1>
        </div> -->
    </main>
</div>

<script>
    const menuButton = document.getElementById("menu-button");
    const aside = document.getElementById("aside");
    console.log("Menu Button ", menuButton);
        menuButton?.addEventListener("click", () => {
            console.log("Menu Icon clicked");

            if (aside) {
                aside.style.display = (aside.style.display == 'none') ? 'block' : 'none'
            }
        });
</script>
