---
import Image from "astro/components/Image.astro";
import { UserCircle } from "~/components/icons/user-circle.tsx";
const isUserLoggedIn = false;
---

<div class="w-screen h-screen bg-blue-600 flex">
    <aside class="w-full h-full sm:w-1/6 hidden sm:block">
        <!-- main Container -->
        <div
            class="flex flex-col w-full h-full justify-between p-2 sm:p-8 bg-gray-600"
        >
            <!-- Header Contaiiner -->
            <a href="/" class="flex w-auto gap-2 p-2 rounded-full bg-gray-800">
                <Image alt="Logo" src="/logo.webp" width={30} height={30} />
                <div>
                    <h1 class="font-black text-lg">Solvent.Lifeâ„¢</h1>
                </div>
            </a>
            <!-- Footer Container -->
            <button
                class="flex gap-2 hover:scale-110 transform transition-transform"
            >
                {
                    isUserLoggedIn && (
                        <Image
                            alt="Logo"
                            src="/logo.webp"
                            width={30}
                            height={30}
                        />
                    )
                }
                <UserCircle />
                Sign in
            </button>
        </div>
    </aside>
    <main class="bg-gray-500 w-full sm:w-5/6">
        MainSlot
        <slot />
    </main>
</div>
